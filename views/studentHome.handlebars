	<div class="container">
		<div class="page-header">
			<h1>Welcome, {{userName}}!</h1>
		</div>			
		{{#if testS}}
		<form id="createClassForm" role="form" method="get" action="/enrollInClass">
			<fieldset>
				<legend class="inputText" for="newClassName">Join a New Class</legend>
				<input type="text" class="form-control" placeHolder="Class code" id="classCode" name="classCode">
				<p class="errorTextOther" >{{joinError}}</p>
				<input class="btn pull-right" type="submit" id="enrollClassBtn" value="Enroll in Class"></input>
			</fieldset>
		</form>

		<form id="selectClassForm" role="form" method="get" action="/useExistingClassStudent">
			<fieldset>
				<legend class="inputText" for="classList">Select an Existing Class</legend>
			    <select form="selectClassForm" class="form-control" id="classList" name="classList">
			      <option id="-" value='{"classID":0,"className":""}' name="-">-</option>
			    {{#each classes}}
			      <option id="{{_id}}" value='{"classID":"{{_id}}","className":"{{name}}" }' name="{{_id}}">{{name}}</option>
			    {{/each}}
			    </select>
				<p class="errorTextOther" >{{selectError}}</p>
				<input class="btn pull-right" type="submit" id="existingClassBtn" value="Proceed"></input>
			</fieldset>
		</form>

		{{else}}
		<form id="selectClassForm" role="form" method="get" action="/useExistingClassStudent">
			<fieldset>
				<legend class="inputText" for="classList">Select an Existing Class</legend>
			    <select form="selectClassForm" class="form-control" id="classList" name="classList">
			      <option id="-" value='{"classID":0,"className":""}' name="-">-</option>
			    {{#each classes}}
			      <option id="{{_id}}" value='{"classID":"{{_id}}","className":"{{name}}" }' name="{{_id}}">{{name}}</option>
			    {{/each}}
			    </select>
				<p class="errorTextOther" >{{selectError}}</p>
				<input class="btn pull-right" type="submit" id="existingClassBtn" value="Proceed"></input>
			</fieldset>
		</form>

		<form id="createClassForm" role="form" method="get" action="/enrollInClass">
			<fieldset>
				<legend class="inputText" for="newClassName">Join a New Class</legend>
				<input type="text" class="form-control" placeHolder="Class code" id="classCode" name="classCode">
				<p class="errorTextOther" >{{joinError}}</p>
				<input class="btn newClassBtn pull-right" type="submit" id="enrollClassBtn" value="Enroll in Class"></input>
			</fieldset>
		</form>

		{{/if}}


		<form id="removeClassForm" role="form" method="get" action="/removeClass">
			<fieldset>
				<legend class="inputText" for="newClassName">Remove a Class</legend>
			    <select form="removeClassForm" class="form-control" id="classList" name="classList">
			      <option id="-" value='{"classID":0,"className":""}' name="-">-</option>
			    {{#each classes}}
			      <option id="{{_id}}" value='{"classID":"{{_id}}","className":"{{name}}" }' name="{{_id}}">{{name}}</option>
			    {{/each}}
			    </select>
				<p class="errorTextOther" >{{removeError}}</p>
				<input type="hidden" name="prevPage" value="studentHome"></input>
				<input class="btn pull-right" type="submit" id="removeClassBtn" value="Remove Class"></input>
			</fieldset>
		</form>	
	</div>

