	<div class="container">
		<div class="page-headerWhite" style="margin-top:-15px;margin-bottom:10px;">
			<h1>Create a New User</h1>
		</div>
		<form id="addUserForm" role="form" method="get" action ="/createUser">
			<input class="inputTextWhite" type="radio" id="studentRadio" name="personType" value="student" checked></input>
			<label class="inputTextWhite radioText" for="studentRadio">Student</label>
			<input class="inputTextWhite" type="radio" id="teacherRadio" name="personType" value="teacher"></input>
			<label class="inputTextWhite radioText" for="teacherRadio">Teacher</label>
			<br>
			<label class="inputTextWhite" for="userName">Username:</label>
			<input class="form-control" type="text" id="username" placeholder="Username" name="userName" value="{{userName}}"><br>
			<label class="inputTextWhite" for="password">Password:</label>
			<input class="form-control" type="password" id="password" placeholder="Password" name="password"><br>
			<label class="inputTextWhite" for="password">Confirm Password:</label>
			<input class="form-control" type="password" id="passwordConfirm" placeholder="Password" name="passwordConfirm">
			<p class="errorTextHome" >{{error}}</p>
			<br>
			<input class="btn pull-right" type="submit" id="submitBtn" value="Create New User">
		</form>
		
