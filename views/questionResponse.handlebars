<!doctype html>

<html>
<head>
	<title>Welcome to QuizNow!</title>	
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="/css/bootstrap.min.css" rel="stylesheet">
	<link href="/css/bootstrap-theme.min.css" rel="stylesheet">
	<link href="/css/introHCI.css" rel="stylesheet">
	<!-- this is a comment in HTML -->

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->        
</head>

<body>
	<div class="container">
		<!-- h1 through h6 are headers. The higher the number, the smaller the header -->
		<!-- p means paragraph -->
		<div class="jumbotron">
			<div>
				<form id="homeForm" role="form" method="get" action="/studentHome">
					<input type="submit" value="Home"></input>
				</form>
				<form id="signOutForm" role="form" method="get" action="/user_logout">
					<input type="submit" value="Sign Out"></input>
				</form>
			</div>
			<h1>{{className}}</h1><br>
		</div>

		<form id="answerQuestionForm" role="form" method="get" action="/submitStudentAnswer">
			<h5>{{questionText}}</h5>
			<input type="radio" name="answerChoices" value="{{answerA}}" checked>{{answerA}}</input>
			<input type="radio" name="answerChoices" value="{{answerB}}" >{{answerB}}</input>
			<input type="radio" name="answerChoices" value="{{answerC}}" >{{answerC}}</input>
			<input type="radio" name="answerChoices" value="{{answerD}}" >{{answerD}}</input>
			<input type="radio" name="answerChoices" value="e. I don't know." >e. I don't know.</input>
 			<input type="submit" id="submitBtn" value="Submit"></input>
		</form>	

		<form id="backForm" role="form" method="get" action="/studentClass">
			<input type="submit" id="backBtn" value="Back"></input>
		<form>	

	<script src="https://code.jquery.com/jquery.js"></script>
	<script src="/js/bootstrap.min.js"></script>

</body>
</html>
