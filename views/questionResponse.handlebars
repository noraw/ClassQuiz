<!doctype html>

<html>
<head>
	<title>Welcome to QuizNow!</title>	
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="/css/bootstrap.min.css" rel="stylesheet">
	<link href="/css/bootstrap-theme.min.css" rel="stylesheet">
	<link href="/css/introHCI.css" rel="stylesheet">
	<link href='http://fonts.googleapis.com/css?family=Noto+Serif' rel='stylesheet' type='text/css'>
</head>

<body><body class="wholepage">
	<div class="container">
		<!-- h1 through h6 are headers. The higher the number, the smaller the header -->
		<!-- p means paragraph -->
		<div class="jumbotron">
			<div>
				<button class = "homebutton" class="navbar-form navbar-left" id="homeForm" onClick="self.location='/studentHome'">
					<span class="glyphicon glyphicon-home"></span>
				</button>
				<h1>{{className}}</h1><br>
				<form class="navbar-form navbar-right" id="signOutForm" role="form" method="get" action="/user_logout">
					<input class="btn" type="submit" value="Sign Out"></input>
				</form>
			</div>
			
		</div>

		<form id="answerQuestionForm" role="form" method="get" action="/submitStudentAnswer">
			<input type="hidden" name="questionID" value="{{questionID}}">{{questionID}}</input>
			<h5>{{questionText}}</h5>
			<input type="radio" name="answerChoices" value="{{answerA}}" checked>{{answerA}}</input><br>
			<input type="radio" name="answerChoices" value="{{answerB}}" >{{answerB}}</input><br>
			<input type="radio" name="answerChoices" value="{{answerC}}" >{{answerC}}</input><br>
			<input type="radio" name="answerChoices" value="{{answerD}}" >{{answerD}}</input><br>
			<input type="radio" name="answerChoices" value="e. I don't know." >e. I don't know.</input><br>
 			<input class="btn" type="submit" id="submitBtn" value="Submit"></input>
		</form>	

		<form id="backForm" role="form" method="get" action="/studentClass">
			<input class="btn" type="submit" id="backBtn" value="Back"></input>
		<form>	

	<script src="https://code.jquery.com/jquery.js"></script>
	<script src="/js/bootstrap.min.js"></script>

</body>
</html>
