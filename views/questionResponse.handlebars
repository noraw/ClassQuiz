<!doctype html>

<html>
<head>
	<title>Welcome to QuizNow!</title>	
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="/css/bootstrap.min.css" rel="stylesheet">
	<link href="/css/bootstrap-theme.min.css" rel="stylesheet">
	<link href="/css/introHCI.css" rel="stylesheet">
	<link href='http://fonts.googleapis.com/css?family=Noto+Serif' rel='stylesheet' type='text/css'>
</head>

<body class="wholepage">
	<nav class="navbar navbar-fixed-top" role="navigation">
		<div class="navbar-inner">
			<div class="container">
				<a class="pull-left homebutton" href="/studentHome">
					<span class="glyphicon glyphicon-home"></span>
				</a>
				<form class="pull-right" id="signOutForm" role="form" method="get" action="/user_logout">
					<input class="btn" type="submit" value="Sign Out"></input>
				</form>
			</div>
		</div>
	</nav>

	<div class="container">
		<div class="page-header">
			<h1>{{className}}</h1>
		</div>

		<form id="answerQuestionForm" role="form" method="get" action="/submitStudentAnswer">
			<input type="hidden" name="questionID" value="{{questionID}}"></input>
			<h4>{{questionText}}</h4>
			{{#each answers}}
				<input class="inputText" type="radio" name="answerChoices" id="{{answer}}" value="{{answer}}" checked></input>
				<label class="inputText radioText" for="{{answer}}">{{answer}}</label><br>
			{{/each}}
			<br><br>
 			<input class="btn pull-right" type="submit" id="submitBtn" value="Submit"></input>
		</form>	

		<form id="backForm" role="form" method="get" action="/studentClass">
			<input class="btn pull-left" type="submit" id="backBtn" value="Back"></input>
		<form>	

	<script src="https://code.jquery.com/jquery.js"></script>
	<script src="/js/bootstrap.min.js"></script>

</body>
</html>
