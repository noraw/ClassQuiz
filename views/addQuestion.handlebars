<!doctype html>

<html>
<head>
	<title>Welcome to QuizNow!</title>	
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="/css/bootstrap.min.css" rel="stylesheet">
	<link href="/css/bootstrap-theme.min.css" rel="stylesheet">
	<link href="/css/introHCI.css" rel="stylesheet">
</head>

<body>
	<div class="container">
		<div class="jumbotron">
			<div>
				<form id="homeForm" role="form" method="get" action="/teacherHome">
					<input type="submit" value="Home"></input>
				</form>
				<form id="signOutForm" role="form" method="get" action="/user_logout">
					<input type="submit" value="Sign Out"></input>
				</form>
			</div>
			<h1>{{className}}</h1>
		</div>

	    <form id="addQuestionForm" role="form" method="get" action="/createQuestion">
			<label for="questionText">Question Text:</label>
			<input type="text" name="questionText" value="{{questionText}}"><br>
			<label for="aText">a.</label>
			<input type="text" name="aText" value="{{aText}}"><br>
			<label for="bText">b.</label>
			<input type="text" name="bText" value="{{bText}}"><br>
			<label for="cText">c.</label>
			<input type="text" name="cText" value="{{cText}}"><br>
			<label for="dText">d.</label>
			<input type="text" name="dText" value="{{dText}}"><br>
			<label for="eText">e. I don't know.</label><br>
			<label for="correctAnswer">Select the correct answer.</label>
		    <select form="addQuestionForm" class="form-control" id="correctAnswer" name="correctAnswer">
			      <option id="-" value="-" name="-">-</option>
			      <option id="a" value="a" name="a">a</option>
			      <option id="b" value="b" name="b">b</option>
			      <option id="c" value="c" name="c">c</option>
			      <option id="d" value="d" name="d">d</option>
		    </select>

			<p>{{error}}</p>
			<br>
			<input type="submit" id="submitBtn" value="Submit Question"></input>
	   	</form>
	    <form id="addQuestionForm" role="form" method="get" action="/teacherClass">
			<input type="submit" id="backBtn" value="Back"></input>
	   	</form>
	

	<script src="https://code.jquery.com/jquery.js"></script>
	<script src="/js/bootstrap.min.js"></script>

</body>
</html>
