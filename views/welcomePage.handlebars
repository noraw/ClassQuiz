<body>
	<div class="container">
		<!-- h1 through h6 are headers. The higher the number, the smaller the header -->
		<!-- p means paragraph -->
		<div class="jumbotron">
			<h1>Welcome to QuizNow!</h1>
		</div>
		<h2>Please enter your username and password.</h2>
		<form role="form" method="get" action ="/user_login">
			<label for="userName">Name:</label>
			<input type="text" class="form-control" id="userName" placeholder="Username" name="userName">
			<label for="description">Password:</label>
			<input type="password" class="form-control" id="password" placeholder="Password" name="password">
			<p>{{error}}</p>
			<input type="submit" id="signIn" value="Sign In"></input>
		</form>
		<form role="form" method="get" action ="/newUser">
			<input type="submit" id="newUser" value="New User"></input>
		</form>

	<script src="https://code.jquery.com/jquery.js"></script>
	<script src="/js/bootstrap.min.js"></script>

</body>
</html>
