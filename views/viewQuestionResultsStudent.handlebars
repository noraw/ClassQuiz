<!doctype html>

<html>
<head>
	<title>CourseMate</title>	
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<meta name="apple-mobile-web-app-capable" content="yes">
	<link href="/css/bootstrap.min.css" rel="stylesheet">
	<link href="/css/bootstrap-theme.min.css" rel="stylesheet">
	<link href="/css/introHCI.css" rel="stylesheet">
	<link href='http://fonts.googleapis.com/css?family=Noto+Serif' rel='stylesheet' type='text/css'>
</head>

<body class="wholepage">
	<nav class="navbar navbar-fixed-top" role="navigation">
		<div class="navbar-inner">
			<div class="container">
				<a class="pull-left homebutton" href="/studentHome">
					<span class="glyphicon glyphicon-home"></span>
				</a>
				<form class="pull-right" id="signOutForm" role="form" method="get" action="/user_logout">
					<input class="btn" type="submit" value="Sign Out"></input>
				</form>
			</div>
		</div>
	</nav>

	<div class="container">
		<div class="page-header">
			<h1>{{questionText}}</h1>
		</div>

		<form id="viewQuestionResponseForm" class="form-horizontal" role="form" method="get" action="/studentClass">
			<label class="inputText control-label" style="color:{{color}}">{{feedback}}</label>
	    	<div class="form-group">
				<label class="col-xs-5 inputText control-label">Your Answer:</label>
				<div class="col-xs-7">
					<label class="inputText control-label">{{studentAnswer}}</label>
				</div>
			</div>
	    	<div class="form-group">
				<label class="col-xs-5 inputText control-label">{{correctAnswerText}}</label>
				<div class="col-xs-7">
					<label class="inputText control-label">{{correctAnswer}}</label>
				</div>
			</div>
			<br><br><br>
 			<input class="btn pull-right" type="submit" id="backBtn" value="Return to {{className}}"></input>
		</form>	
	

	<script src="https://code.jquery.com/jquery.js"></script>
	<script src="/js/bootstrap.min.js"></script>
	
</body>
</html>
