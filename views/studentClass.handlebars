<!doctype html>

<html>
<head>
	<title>Welcome to QuizNow!</title>	
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="/css/bootstrap.min.css" rel="stylesheet">
	<link href="/css/bootstrap-theme.min.css" rel="stylesheet">
	<link href="/css/introHCI.css" rel="stylesheet">
</head>

<body>
	<div class="container">
		<div class="jumbotron">
			<div>
				<form id="homeForm" role="form" method="get" action="/studentHome">
					<input type="submit" value="Home"></input>
				</form>
				<form id="signOutForm" role="form" method="get" action="/user_logout">
					<input type="submit" value="Sign Out"></input>
				</form>
			</div>
			<h1>{{className}}</h1>
		</div>

		<form id="answerQuestionForm" role="form" method="get" action="/answerQuestion">
			<div class="form-group">
				<label for="questionList">Questions to Answer:</label>
			    <select form="answerQuestionForm" class="form-control" id="questionList" name="questionList">
			      <option id="-" value="-" name="-">-</option>
			    {{#each answerQuestions}}
			      <option id="{{_id}}" value="{{_id}}" name="{{_id}}">{{text}}</option>
			    {{/each}}
			    </select>
			</div>
			<p>{{answerError}}</p>
			<input type="submit" id="answerBtn" value="Answer Question"></input>
		</form>


		<br>
		<form id="resultsQuestionForm" role="form" method="get" action="/resultsQuestionStudent">
			<div class="form-group">
				<label for="questionList">Previously Answered Questions:</label>
			    <select form="resultsQuestionForm" class="form-control" id="questionList" name="questionList">
			      <option id="-" value="-" name="-">-</option>
			    {{#each resultsQuestions}}
			      <option id="{{_id}}" value="{{_id}}" name="{{_id}}">{{text}}</option>
			    {{/each}}
			    </select>
			</div>
			<p>{{resultsError}}</p>
			<input type="submit" id="viewResultsBtn" value="View Previous Results"></input>
		</form>
		
	

	<script src="https://code.jquery.com/jquery.js"></script>
	<script src="/js/bootstrap.min.js"></script>

</body>
</html>
