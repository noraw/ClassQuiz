<!doctype html>

<html>
<head>
	<title>CourseMate</title>	
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<meta name="apple-mobile-web-app-capable" content="yes">
	<link href="/css/bootstrap.min.css" rel="stylesheet">
	<link href="/css/bootstrap-theme.min.css" rel="stylesheet">
	<link href="/css/introHCI.css" rel="stylesheet">
	<link href='http://fonts.googleapis.com/css?family=Noto+Serif' rel='stylesheet' type='text/css'>
</head>

<body class="wholepage">
	<nav class="navbar navbar-fixed-top" role="navigation">
		<div class="navbar-inner">
			<div class="container">
				<a class="pull-left homebutton" href="/studentHome">
					<span class="glyphicon glyphicon-home"></span>
				</a>
				<form class="pull-right" id="signOutForm" role="form" method="get" action="/user_logout">
					<input class="btn" type="submit" value="Sign Out"></input>
				</form>
			</div>
		</div>
	</nav>

	<div class="container">
		<div class="page-header">
			<h1>{{className}}</h1>
		</div>

		<form id="answerQuestionForm" role="form" method="get" action="/answerQuestion">
			<fieldset>
				<legend class="inputText" for="questionList">Step 1: Answer a Question</legend>
			    <select form="answerQuestionForm" class="form-control" id="questionList" name="questionList">
			      <option id="-" value="-" name="-">-</option>
			    {{#each answerQuestions}}
			      <option id="{{_id}}" value="{{_id}}" name="{{_id}}">{{text}}</option>
			    {{/each}}
			    </select>
				<p class="errorTextOther" >{{answerError}}</p>
				<input class="btn pull-right" type="submit" id="answerBtn" value="Answer Question"></input>
			</fieldset>
		</form>

		<form id="resultsQuestionForm" role="form" method="get" action="/resultsQuestionStudent">
			<fieldset>
				<legend class="inputText" for="questionList">Step 2: View Results</legend>
			    <select form="resultsQuestionForm" class="form-control" id="questionList" name="questionList">
			      <option id="-" value="-" name="-">-</option>
			    {{#each resultsQuestions}}
			      <option id="{{_id}}" value="{{_id}}" name="{{_id}}">{{text}}</option>
			    {{/each}}
			    </select>
				<p class="errorTextOther" >{{resultsError}}</p>
				<input class="btn pull-right" type="submit" id="viewResultsBtn" value="View Previous Results"></input>
			</fieldset>
		</form>

	<script src="https://code.jquery.com/jquery.js"></script>
	<script src="/js/bootstrap.min.js"></script>
</body>
</html>
