<!doctype html>

<html>
<head>
	<title>Welcome to QuizNow!</title>	
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="/css/bootstrap.min.css" rel="stylesheet">
	<link href="/css/bootstrap-theme.min.css" rel="stylesheet">
	<link href="/css/introHCI.css" rel="stylesheet">
	<link href='http://fonts.googleapis.com/css?family=Noto+Serif' rel='stylesheet' type='text/css'>
</head>

<body class="wholepage">
	<div class="container">
		<div class="jumbotron">
			<nav class="navbar navbar-fixed-top" role="navigation">
				<div class="navbar-inner">
					<div class="container">
						<form class="pull-right" id="signOutForm" role="form" method="get" action="/user_logout">
							<input class="btn" type="submit" value="Sign Out"></input>
						</form>
					</div>
				</div>
			</nav>
			<div>
				<h1>Welcome {{userName}}</h1>
			</div>			
		</div>

		<form id="selectClassForm" role="form" method="get" action="/useExistingClass">
			<div class="form-group">
				<label class="inputText" for="classList">Select a current class:</label>
			    <select form="selectClassForm" class="form-control" id="classList" name="classList">
			      <option id="-" value='{"classID":0,"className":""}' name="-">-</option>
			    {{#each classes}}
			      <option id="{{_id}}" value='{"classID":"{{_id}}","className":"{{name}}" }' name="{{_id}}">{{name}}</option>
			    {{/each}}
			    </select>
			</div>
			<p class="errorText" >{{selectError}}</p>
			<input class="btn" type="submit" id="existingClassBtn" value="Proceed"></input>
		</form>

		<form id="createClassForm" role="form" method="get" action="/createClass">
		    <div class="form-group">
			    <label class="inputText" for="newClassName">Create a new class:</label>
				<input type="text" class="form-control" placeHolder="New Class Name" id="newClassName" name="newClassName">
			</div>
			<p class="errorText">{{createError}}</p>
			<input class="btn" type="submit" id="createClassBtn" value="Create New Class"></input>
		</form>

		<form id="removeClassForm" role="form" method="get" action="/removeClass">
			<div class="form-group">
				<label class="inputText" for="classList">Remove a class:</label>
			    <select form="removeClassForm" class="form-control" id="classList" name="classList">
			      <option id="-" value='{"classID":0,"className":""}' name="-">-</option>
			    {{#each classes}}
			      <option id="{{_id}}" value='{"classID":"{{_id}}","className":"{{name}}" }' name="{{_id}}">{{name}}</option>
			    {{/each}}
			    </select>
			</div>
			<p class="errorText">{{removeError}}</p>
			<input type="hidden" name="prevPage" value="teacherHome"></input>
			<input class="btn" type="submit" id="removeClassBtn" value="Remove Class"></input>
		</form>
		<br>			
	</div>
	

	<script src="https://code.jquery.com/jquery.js"></script>
	<script src="/js/bootstrap.min.js"></script>

</body>
</html>
